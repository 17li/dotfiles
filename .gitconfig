[alias]
    graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cn %Cred%d %Creset%s'
    gr = graph
    br = branch
    st = status
    cm = commit
    sw = switch

[ghq]
    root = ~/.ghq
[github]
    user = konafx

[core]
    editor = vim
    whitespace = cr-at-eol
    autocrlf = true
[receive]
    #denyNonFastforwards = false
[gpg]
    program = gpg
[commit]
    gpgsign = true
[pull]
    rebase = true
[include]
    path = ~/.gitconfig.local

[url "git@github.com:"]
    pushInsteadOf = git://github.com/
    pushInsteadOf = https://github.com/
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
